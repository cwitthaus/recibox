<% provide(:title, @recipe.title) %>
<div class="row">
	<div class="span12 recipe">
		<h1>
			<%= @recipe.title %>
		</h1>
		<h3>
			<%= @recipe.source %>
		</h3>
		<% if @ingredients %>
		<div class="ingredients">
			Ingredients:
			<ol>
				<%= render @ingredients %>
			</ol>
		</div>
		<% end %>
		<% if @steps %>
		<div class="steps">
			Steps:
			<ol>
				<%= render @steps %>
			</ol>
		</div>	
		<% end %>
  </div>
</div>